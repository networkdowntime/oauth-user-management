# Database Admin Credentials
POSTGRES_HYDRA_ADMIN_USER=hydra_admin
POSTGRES_HYDRA_ADMIN_PASSWORD=hydra_admin_password_change_me
POSTGRES_AUTH_ADMIN_USER=auth_admin
POSTGRES_AUTH_ADMIN_PASSWORD=auth_admin_password_change_me

# Database Application Users
POSTGRES_HYDRA_USER=hydra_user
POSTGRES_HYDRA_PASSWORD=hydra_user_password_change_me
POSTGRES_AUTH_USER=auth_user
POSTGRES_AUTH_PASSWORD=auth_user_password_change_me

# Database Names
POSTGRES_HYDRA_DB=hydra_db
POSTGRES_AUTH_DB=auth_db

# Default Admin User (for the auth system)
DEFAULT_ADMIN_EMAIL=admin@example.com
